<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="liyuz.urbandataanalysis.DetailFilterFragment">

    <TextView
        android:id="@+id/chart_filter_area_tv"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Area"/>

    <Button
        android:id="@+id/filter_chart_area_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to change"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/chart_filter_attr_tv"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Attribute"/>

    <Button
        android:id="@+id/filter_chart_attribute_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to change"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/chart_filter_class_tv"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Classifier"/>

    <Button
        android:id="@+id/filter_chart_classifier_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to change"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/chart_filter_lvl_tv"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Class Level"/>

    <Button
        android:id="@+id/filter_chart_level_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to change"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/chart_filter_color_tv"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Color Collection"/>

    <Button
        android:id="@+id/filter_chart_color_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to change"
        android:textAllCaps="false"/>

    <TextView
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:id="@+id/seek_progress_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Opacity: 70%"/>
    <SeekBar
        android:layout_marginTop="20dp"
        android:id="@+id/filter_chart_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/colorPrimary"
        android:max="100"
        android:progress="70"

        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/filter_chart_show_btn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_btn"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="show"
        android:layout_marginBottom="30dp"/>


</LinearLayout>
