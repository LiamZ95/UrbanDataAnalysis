<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="liyuz.urbandataanalysis.DetailFragment">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detail_map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        tools:context="liyuz.urbandataanalysis.MapsActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/detail_chart_btn"
            android:text="show in chart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/detail_map_btn"
            android:text="show on map"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <ListView
        android:id="@+id/detail_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/detail_floating_btn"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--app:fabSize="normal"-->
        <!--/>-->
</LinearLayout>
