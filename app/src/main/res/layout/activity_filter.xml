<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="liyuz.urbandataanalysis.FilterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Area"/>

    <Button
        android:id="@+id/filter_area_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Touch to select"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Attribute"/>

    <Button
        android:id="@+id/filter_attribute_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Touch to select"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Classifier"/>

    <Button
        android:id="@+id/filter_classifier_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Touch to select"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Class Level"/>

    <Button
        android:id="@+id/filter_level_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Touch to select"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Color Collection"/>

    <Button
        android:id="@+id/filter_color_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Touch to select"/>



</LinearLayout>
